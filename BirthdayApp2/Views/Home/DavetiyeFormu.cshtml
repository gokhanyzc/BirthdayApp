@model BirthdayApp2.Models.DavetiyeModel


@{
    ViewBag.Title = "DavetiyeFormu";
}

<div class="panel panel-success">
    <div class="panel-heading"><h4>Sende Davetlisin!</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
{
            <div class="form-group">
                <label>Ad:</label>
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                @Html.ValidationMessageFor(i=>i.Ad ,"", new { @style="color:red"})
            </div>

            <div class="form-group">
                <label>E-Posta:</label>
                @Html.TextBoxFor(x => x.Eposta, new { @class = "form-control" })
                @Html.ValidationMessageFor(i => i.Eposta ,"", new { @style="color:red"})
            </div>

            <div class="form-group">
                <label>Katılacak Mısın?</label>
                @Html.DropDownListFor(x => x.KatilmaDurumu, new[] {
                    new SelectListItem() {Text="Evet,Geliyorum.",Value=bool.TrueString},
                    new SelectListItem() {Text="Üzgünüm,Gelemiyorum.", Value=bool.FalseString}
                  }, "Geliyor Musun?", new { @class = "form-control" })

                @Html.ValidationMessageFor(i => i.KatilmaDurumu ,"", new { @style="color:red"})
            </div>

            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Gönder" />

            </div>


        }

    </div>

</div>

